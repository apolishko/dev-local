# Testing Environment
DATABASE_URL=jdbc:postgresql://localhost:5432/pce-question-groups
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=pce-question-groups
DATABASE_SCHEMA=public
DATABASE_PORT=5432

# Testing Authentication (Mock Mode)
AUTH_MODE=mock

# JWT Configuration (for mock tokens)
AUTH_JWT_PUBLIC_KEY=
AUTH_JWT_ISSUER=http://localhost:9999
AUTH_JWT_JWKS_URI=http://localhost:9999/.well-known/jwks.json

# OIDC Configuration (mock endpoints)
AUTH_OIDC_ISSUER=http://localhost:9999
AUTH_OIDC_CLIENT_ID=mock-client-id
AUTH_OIDC_CLIENT_SECRET=mock-client-secret
AUTH_OIDC_REDIRECT_URI=http://localhost:8080/auth/callback
AUTH_OIDC_AUTHORIZATION_URI=http://localhost:9999/auth/authorize
AUTH_OIDC_TOKEN_URI=http://localhost:9999/auth/token
AUTH_OIDC_USER_INFO_URI=http://localhost:9999/userinfo
AUTH_OIDC_END_SESSION_URI=http://localhost:9999/auth/logout
AUTH_OIDC_SCOPES=openid,profile,email

# Fake Configuration (not used in mock mode)
AUTH_FAKE_LOGIN=
AUTH_FAKE_ROLE=
AUTH_FAKE_ORGANIZATION_ID=

# Mock Configuration (active in mock mode)
AUTH_MOCK_ENABLED=true
AUTH_MOCK_SERVER_PORT=9999
AUTH_MOCK_USERS_FILE=src/test/resources/mock-users.json

# Testing logging
LOGGING_LEVEL_COM_PEARSON_PCE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_BATCH=INFO

# Import settings
IMPORT_SOURCE_MODE=local
IMPORT_LOCAL_PATH=src/test/resources/data

# OpenAPI Configuration
OPENAPI_ENABLED=true
OPENAPI_TITLE=Pearson Career Explorer API (Testing)
OPENAPI_DESCRIPTION=REST API for the Pearson Career Explorer platform - Testing Environment
OPENAPI_VERSION=v0.3
OPENAPI_SERVER_URL=http://localhost:8080
OPENAPI_SERVER_DESCRIPTION=Testing server
OPENAPI_CONTACT_NAME=Pearson Career Explorer Team
OPENAPI_CONTACT_EMAIL=support@pearson.com